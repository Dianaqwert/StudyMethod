<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pmenufc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulMuyClaro"
    android:orientation="vertical"
    tools:context=".Act6MenuFC">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/cuadroazulmuyclaro"
        android:columnCount="2"
        android:rowCount="1"
        android:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aoboshi_one"
                android:padding="8dp"
                android:text="@string/saludo"
                android:textColor="@color/azul"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txtNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aoboshi_one"
                android:paddingLeft="8dp"
                android:paddingTop="0dp"
                android:text="@string/nombrep4"
                android:textColor="@color/azul"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="123dp"
            android:layout_height="106dp"
            android:layout_row="0"
            android:layout_column="1"
            android:contentDescription="Flor decorativa"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/n5" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aoboshi_one"
        android:padding="10dp"
        android:text="@string/conjuntosFlashC"
        android:textColor="@color/azulFuerte"
        android:textSize="30dp" />

    <HorizontalScrollView
        android:id="@+id/scrollViewCuadros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contenedorCuadros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">
        </LinearLayout>
    </HorizontalScrollView>


    <Button
        android:id="@+id/btnAddCartas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/azulFuerte"
        android:fontFamily="@font/aoboshi_one"
        android:text="@string/btnAddFC"
        android:textColor="@color/azulMuyClaro"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aoboshi_one"
        android:padding="10dp"
        android:text="@string/error"
        android:textColor="@color/azulmedio"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contenedorDeCuadros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        </LinearLayout>

    </ScrollView>

</LinearLayout>