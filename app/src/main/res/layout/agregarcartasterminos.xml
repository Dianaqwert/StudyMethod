<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/cartas"
    android:background="@color/azulMuyClaro"
    android:layout_height="match_parent">

    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agrega cartas de estudio"
        android:textSize="30dp"
        android:textColor="@color/azulmedio"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/aoboshi_one"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <TableRow>

            <TextView
                android:id="@+id/idTema"
                android:textColor="@color/azulmedio"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aoboshi_one"
                android:text="#56"
                android:gravity="end"
                android:textSize="60dp" />


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@drawable/n6"
                android:layout_gravity="start"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="bottom">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="70dp"
                    android:background="@drawable/n7" />


                <Button
                    android:id="@+id/btnJugarFC"
                    android:fontFamily="@font/aoboshi_one"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/azulMuyClaro"
                    android:textColor="@color/azul"
                    android:textAlignment="textStart"
                    android:text="#.Tema" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/numeroCarta"
        android:background="@drawable/cuadroazulmuyclaro"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carta nÃºmero 57"
        android:textColor="@color/azulmedio"
        android:fontFamily="@font/aoboshi_one"
        android:textSize="20dp"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/concepto"
        android:textColor="@color/azulmedio"
        android:fontFamily="@font/aoboshi_one"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/conceptoFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_margin="10dp"
        android:textColor="@color/azulmedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descrip"
        android:fontFamily="@font/aoboshi_one"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descripCarta"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/btnAddNuevas"
        android:layout_height="wrap_content"
        android:text="@string/addT"
        android:fontFamily="@font/aoboshi_one"
        android:textSize="15dp"
        android:backgroundTint="@color/azulmedio"/>


</LinearLayout>