<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cuadroazulfuerte"
    android:padding="10dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txtTituloEstadistica"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/aoboshi_one"
        android:text="Tema"
        android:textAlignment="textStart"
        android:textColor="@color/azulMuyClaro"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDetalleEstadistica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/errores_fc"
        android:fontFamily="@font/aoboshi_one"
        android:textColor="@color/azulMuyClaro" />

    <Button
        android:id="@+id/btnVerMasEstadistica"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:backgroundTint="@color/azulMuyClaro"
        android:fontFamily="@font/aoboshi_one"
        android:text="@string/btnverMas"
        android:textColor="@color/azulmedio"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
</LinearLayout>