<?xml version="1.0" encoding="utf-8"?>
<!-- Define a shape drawable for a square with rounded corners -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">  <!-- rectangle shape for square/rectangular background -->

    <!-- Set the solid fill color to green -->
    <solid android:color="#d7e5ca"/>  <!-- Material Design green color -->

    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="8dp"/>  <!-- 8dp radius for moderate rounding -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

</shape>